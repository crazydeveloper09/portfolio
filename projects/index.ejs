<% include ../partials/header %>

<br>
<br>
<br>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="text-center" id="name"><%= language.__("Projekty dla parametru") %>: <%= type %></h1>
            </div>
        </div>
            <div class="row">
                <% if(projects.length===0){ %>
                    <div class="col-lg-12">
                        <div class="alert alert-danger">
                            <%= language.__("Nie mam dostępnych projektów dla parametru") %>: <%= type %>
                        </div>
                    </div>
                <% } else { %>
                    <% for(let i=projects.length-1; i>=0; i--){ %>
                        <div class="col-lg-4 col-md-12" style="margin-top: 8px">
                            <div class="card">
                                <% if(projects[i].link !== 'undefined'){ %>
                                    <% if(projects[i].type === "not-ended"){ %>
                                        <a href="<%= projects[i].link %>"><img src="<%= projects[i].profile %>" alt="Strona" style="border-bottom: 3px solid red;" class="card-img-top"></a>
                                    <% } else if(projects[i].type === "awaiting"){ %>
                                        <a href="<%= projects[i].link %>"><img src="<%= projects[i].profile %>" style="border-bottom: 3px solid yellow;" alt="Strona" class="card-img-top"></a>
                                    <% } else if(projects[i].type === "all-good"){ %>
                                        <a href="<%= projects[i].link %>"><img src="<%= projects[i].profile %>" style="border-bottom: 3px solid green;" alt="Strona" class="card-img-top"></a>
                                    <% } else { %>
                                        <a href="<%= projects[i].link %>"><img src="<%= projects[i].profile %>" alt="Strona" class="card-img-top"></a>
                                    <% } %>
                                <% } else { %>
                                    <% if(projects[i].type === "not-ended"){ %>
                                        <img src="<%= projects[i].profile %>" alt="Strona" style="border-bottom: 3px solid red;" class="card-img-top main">
                                        
                                    <% } else if(projects[i].type === "awaiting"){ %>
                                        <img src="<%= projects[i].profile %>" alt="Strona" style="border-bottom: 3px solid yellow;" class="card-img-top">
                                    <% } else if(projects[i].type === "all-good"){ %>
                                        <img src="<%= projects[i].profile %>" alt="Strona" style="border-bottom: 3px solid green;" class="card-img-top">
                                    <% } else { %>
                                        <img src="<%= projects[i].profile %>" alt="Strona" class="card-img-top">
                                    <% } %>
                                <% } %>
                                <br>
                                <div class="card-title text-center" id="name"><a href="/projects/<%= projects[i]._id %>" style="color: #01597c"><%= projects[i].title %></a></div>
                                <div class="card-body">
                                    <p class="normal"><%= language.__(projects[i].description.substring(0,200)) %>...</p>
                                    <a href="/projects/<%= projects[i]._id %>"><%= language.__("Czytaj więcej") %></a>
                                </div>
                            </div>
                        </div>
                    <% } %>
                <% } %>
                
                   
            </div>
           
       
    </div>

<% include ../partials/footer %>