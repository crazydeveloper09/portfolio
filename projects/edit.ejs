<% include ../partials/header %>
<br>
<br>
<br>
    <div class="container" id="addProject">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-lg-12">
				<div class="card">
					<br>
					<div class="card-title text-center" id="name">
						Edytuj <%= project.title %>
					</div>
					<div class="card-body">
						 <form action="/projects/<%= project._id %>?_method=PUT" method="post">
							 <p class="normalf">
								 Edytuj tytuł
							 </p>
							<input type="text" name="project[title]" value="<%= project.title %>" placeholder="Tytuł projektu" class="form-control">
							<br>
							  <p class="normalf">
								 Edytuj opis
							 </p>
							<textarea name="project[description]" placeholder="Opis projektu" id="description" class="form-control"><%= project.description %></textarea>
							<br>
							  <p class="normalf">
								 Edytuj status
							 </p>
							<input type="text" name="project[status]" value="<%= project.status %>" placeholder="Status projektu" class="form-control">
							<br>
							  <p class="normalf">
								 Edytuj link
							 </p>
							<input type="text" name="project[link]" value="<%= project.link %>" placeholder="Link do projektu" class="form-control">
							<br>
							<p class="normalf">
								Edytuj typ
							</p>
							<select name="project[type]" class="form-control" style="background: none;
										color: #01597c;
										border-bottom: 1px solid #01597c;
										border-top: none;
										border-right: none;
										border-left: none;">
								<option><%= project.type %></option>		
								<option value="not-ended">Nieskończony</option>
								<option value="awaiting">Oczekujący</option>
								<option value="all-good">Skończony</option>
							</select>
							<br>
							<input type="submit" value="Edytuj projekt" class="btn btn-outline-primary">
						</form>
					</div>
				</div>
              
            </div>
        </div>
    </div>
<% include ../partials/footer %>