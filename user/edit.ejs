<% include ../partials/header %>
<br>
<br>
<br>
<br>
    <div class="container" id="addProject">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-title text-center" id="name">
                        <br>
                        Edytuj o mnie
                    </div>
                    <div class="card-body">
                        <form action="/user/<%= user._id %>?_method=PUT" method="post">
                            <p class="normalf">Edytuj nazwę użytkownika</p>
                            <input type="text" name="user[username]" value="<%= user.username %>" placeholder="Nazwa użytkownika" class="form-control">
                            <br>
                            <p class="normalf">Edytuj email</p>
                            <input type="text" name="user[email]" value="<%= user.email %>" placeholder="Email" class="form-control">
                            <br>
                            <p class="normalf">Edytuj link do Facebooka</p>
                            <input type="text" name="user[fbLink]" value="<%= user.fbLink %>" placeholder="Link do Facebooka" class="form-control">
                            <br>
                            <p class="normalf">Edytuj opis linku do Facebooka</p>
                            <input type="text" name="user[fbDesc]" value="<%= user.fbDesc %>" placeholder="Opis linku do Facebooka" class="form-control">
                            <br>
                            <p class="normalf">Edytuj link do Instagrama</p>
                            <input type="text" name="user[igLink]" value="<%= user.igLink %>" placeholder="Link do Instagrama" class="form-control">
                            <br>
                            <p class="normalf">Edytuj opis linku do Instagrama</p>
                            <input type="text" name="user[igDesc]" value="<%= user.igDesc %>" placeholder="Opis linku do Instagrama" class="form-control">
                            <br>
                            <p class="normalf">Edytuj opis</p>
                            <textarea name="user[about]" placeholder="Opis projektu" id="polish" class="form-control"><%= user.about %></textarea>
                            <br>
                            <p class="normalf">Edytuj po angielsku</p>
                            <textarea name="user[en]" placeholder="Opis admina po angielsku" id="english" class="form-control"><%= user.en %></textarea>
                            <br>
                            <input type="submit" value="Edytuj o mnie" class="btn btn-outline-primary">
                        </form>
                    </div>
                </div>
               
            </div>
        </div>
    </div>
<% include ../partials/footer %>