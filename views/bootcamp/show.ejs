<% include ../partials/header %>
<br>
<br>
<br>
<br>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <img src="<%= bootcamps.profile %>" alt="" class="card-img-top">
                <div class="card-title text-center" id="name">
                    <br>
                    <%= bootcamps.title %>
                </div>
                <div class="card-body">
                    <p class="normal">Link: <strong><a href="<%= bootcamps.link %>"><%= bootcamps.link %></a></strong></p>
                    <p class="normal"><%= language.__("Postęp:") %> <strong><%= bootcamps.progress %>%</strong></p>
                                   
                    <div class="progress">
                        <div class="progress-bar progress-bar-striped bg-dark progress-bar-animated" role="progressbar" style="width:<%= bootcamps.progress %>%" aria-valuenow="<%= bootcamps.progress %>" aria-valuemin="0" aria-valuemax="100"></div>
                    </div> 
                    <br>
                    <p class="normal"><%= language.__("Instruktorzy:") %> <strong><%= bootcamps.instructor %></strong></p>
                    <% if(typeof currentUser !=="undefined"){ %>
                        <% if(currentUser.username === "Admin"){ %>
                            <div class="dropdown">
                                <button class="btn-mine dropdown-toggle justify-content-center" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                  Modyfikacja
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton" style="background: #dddddd">
                                  
                                    <a href="/bootcamps/<%= bootcamps._id %>/exercises/new" class="dropdown-item">Dodaj ćwiczenie</a>
                                <a href="/bootcamps/<%= bootcamps._id %>/edit" class="dropdown-item">Edytuj bootcamp</a>
                                <a href="/bootcamps/<%= bootcamps._id %>/delete" class="dropdown-item">Usuń bootcamp</a>
                                     
                                  
                                  
                                  
                                    
                                </div>
                              </div>
                            

                        <% } %>
                    <% } %>
                    <p class="text-center" id="name"> <%= language.__("Ćwiczenia") %></p>
                
                    <% if(bootcamps.exercises.length ===0){ %>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="alert alert-info">
                                    <%= language.__("Nie dodałem żadnych ćwiczeń do bootcampa") %>  <%= bootcamps.title %>
                                </div>
                            </div>
                        </div>
                        
                    <% } else { %>
                        <div class="row">
                            <% for(let i=bootcamps.exercises.length-1; i>=0;i--){ %>
                                <div class="col-lg-4 col-md-6 col-sm-12 text-center" class="exercises">
                                    <img src="<%= bootcamps.exercises[i].profile %>" alt="" class="img-thumbnail">
                                    <br>
                                    <a href="<%= bootcamps.exercises[i].link %>" class="normalf text-center"><%= language.__(bootcamps.exercises[i].title) %></a>
                                    <% if(typeof currentUser !=="undefined"){ %>
                                        <% if(currentUser.username === "Admin"){ %>
                                            <div class="d-inline">
                                              
                                                <a href="/bootcamps/<%= bootcamps._id %>/exercises/<%= bootcamps.exercises[i]._id %>/delete" class="btn btn-outline-danger">Usuń ćwiczenie</a>
                                            </div>
                
                                        <% } %>
                                    <% } %>
                                </div>
                            <% } %>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>
<% include ../partials/footer %>